    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "src/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
